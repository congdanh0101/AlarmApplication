<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worldclock.WorldclockFragment"
    android:padding="8dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list_worldclock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_worldclock_header"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/iv_add_worldclock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_add" />

    <TextView
        android:id="@+id/tv_worldclock_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_add_worldclock"
        android:text="World Clock"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:textSize="32dp"/>


</RelativeLayout>